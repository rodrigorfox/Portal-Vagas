                        </select>
                    </div>
                </div>
            </fieldset>
            <hr />
            <fieldset>
                <div class="container col-sm-6 col-xs-12">
                    <div class="form-group">
                        <label for="MatriculaAluno">E-mail:</label>
                        <input class="form-control" type="email" id="MatriculaAluno" name="Nome" required />
                    </div>
                </div>
                <div class="container col-sm-6 col-xs-12">
                    <div class="form-group">
                        <label for="SenhaAluno">Senha:</label>
                        <input class="form-control" type="password" id="SenhaAluno" name="CPF" required maxlength="8" />
                    </div>
                </div>
            </fieldset>
            <hr />
            <div class="col-md-6 col-xs-10 col-md-offset-3 col-xs-offset-1">
                <input type="submit" value="Cadastrar" class="candidatura btn btn-success col-xs-5" />
                <input type="button" value="Voltar" onclick="history.back()" class="candidatura btn btn-primary col-xs-5" />
            </div>
        </form>
    </div>
</div>
<script>
    function cadastrado() {
            alert("Cadastro Efetuado com Sucesso!");
            window.location.href = "@Url.Action("Company", "Home")";
    }
</script>
