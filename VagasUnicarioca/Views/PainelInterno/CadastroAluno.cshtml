
@{
    ViewBag.Title = "CadastroAluno";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid cadastro">
    <div class="container" id="Cadastro">
        <form action="@Url.Action("Student","Home")" method="post" onsubmit="cadastrado()">
            <fieldset>
                <legend>Dados do Aluno</legend>
                <div class="container col-sm-6 col-xs-12">
                    <div class="form-group">
                        <label for="MatriculaAluno">Nome:</label>
                        <input class="form-control" type="text" id="MatriculaAluno" name="Nome" required />
                    </div>
                    <div class="form-group">
                        <label for="SenhaAluno">CPF:</label>
                        <input class="form-control" type="text" id="SenhaAluno" name="CPF" required />
                    </div>
                    <div class="form-group">
                        <label for="SenhaAluno">Telefone:</label>
                        <input class="form-control" type="tel" id="Telefone" name="CPF" required />
                    </div>
                </div>
                <div class="container col-sm-6 col-xs-12">
                    <div class="form-group">
                        <label for="MatriculaAluno">Naturalidade:</label>
                        <input class="form-control" type="text" id="MatriculaAluno" name="Naturalidade" required />
                    </div>
                    <div class="form-group">
                        <label for="SenhaAluno">Data de Nacimento:</label>
                        <input class="form-control" type="date" id="SenhaAluno" name="Data de Nacimento" required />
                    </div>
                    <div class="form-group">
                        <label for="SenhaAluno">Celular:</label>
                        <input class="form-control" type="tel" id="SenhaAluno" name="Celular" />
                    </div>
                </div>
            </fieldset>
            <hr />
            <fieldset>
                <div class="container col-sm-6 col-xs-12">
                    <fieldset>
                        <div class="form-group col-sm-6 col-xs-12">
                            <label for="MatriculaAluno">CEP:</label><a href="http://www.buscacep.correios.com.br/sistemas/buscacep/" target="_blank" class="pull-right">Esqueceu o CEP?</a>
                            <input class="form-control" type="text" id="MatriculaAluno" name="Nome" required />
                        </div>
                        <div class="form-group col-sm-6 col-xs-12">
                            <label for="SenhaAluno">Bairro:</label>
                            <input class="form-control" type="text" id="SenhaAluno" name="CPF" required />
                        </div>
                        <div class="form-group">
                            <label for="SenhaAluno">Rua:</label>
                            <input class="form-control" type="tel" id="Telefone" name="CPF" required />
                        </div>
                        <div class="form-group col-sm-6 col-xs-12">
                            <label for="MatriculaAluno">Numero:</label>
                            <input class="form-control" type="text" id="MatriculaAluno" name="Nome" required />
                        </div>
                        <div class="form-group col-sm-6 col-xs-12">
                            <label for="SenhaAluno">Complemento:</label>
                            <input class="form-control" type="text" id="SenhaAluno" name="CPF" />
                        </div>
                    </fieldset>
                </div>
                <div class="container col-sm-6 col-xs-12">
                    <div class="form-group">
                        <label for="MunicipioVaga">Município:</label>
                        <select id="MunicipioVaga" name="Municipio" class="form-control" required>
                            <option>Selecione</option>
                            <option>	Angra dos Reis	</option>
