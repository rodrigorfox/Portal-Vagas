
@{
    ViewBag.Title = "LoginAluno";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid main-aluno">
    <div class="container">
        <div id="Login" class="container-fluid col-md-5 col-xs-11">
            <form action="@Url.Action("Estudante", "PainelInterno")" method="post">
                <fieldset>
                    <legend>Login</legend>
                    <div class="form-group">
                        <label for="MatriculaAluno">E-mail:</label>
                        <input class="form-control" type="text" id="MatriculaAluno" name="Login" />
                    </div>
                    <div class="form-group">
                        <label for="SenhaAluno">Senha:</label><a href="#" class="pull-right">Esqueci minha senha</a>
                        <input class="form-control" type="password" id="SenhaAluno" name="Senha" />
                    </div>
                    <a href="@Url.Action("CadastroAluno","PainelInterno")">Novo por aqui? Cadastre-se</a>
                    <div id="captcha">
                        <label for="recaptcha">
                            <input type="checkbox" id="recaptcha"> Não sou um robô.
                        </label>
                    </div>
                    <p><input class="btn btn-danger btn-block" type="submit" value="Acessar" /></p>
                </fieldset>
            </form>
        </div>
    </div>

</div>
